<UserControl x:Class="Components.Controls.GroupSeparator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Components.Controls"
             mc:Ignorable="d"
             Height="auto" Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Center" Grid.Column="0" >
            <TextBlock.Inlines><!--RelativeSource={RelativeSource AncestorType=UserControl}, Path=Header}-->
                <Run FontWeight="Bold" FontSize="10" Text="{Binding RelativeSource={RelativeSource AncestorType=local:GroupSeparator}, Path=Header}" />
            </TextBlock.Inlines>
        </TextBlock>
        <Separator Grid.Column="1" MinWidth="400" Width="auto" Margin="10 0 0 0"/>
    </Grid>
</UserControl>
